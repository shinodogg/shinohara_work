<!DOCTYPE html>
<html>
<head>
  <title>ShinoharaWork</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <p>Hello! <%= @login %></p>
  <div id="header"
  <% if current_user %>
  <p><%= link_to 'Question!', :controller => :english, :action => :study %> || <%= link_to 'Your Result', :controller => :english, :action => :user_result %> || <%= link_to 'Help', :controller => :english, :action => :help %> || <%= link_to('logout', [ :destroy, current_user, :session ], :class => 'signOut') %></p>
  <% end %>
  </div>
  <%= yield %>

</body>
</html>
